<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.bierbock.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_fragment_left"
            app:destination="@id/fragment_left" />
        <action
            android:id="@+id/action_FirstFragment_to_fragment_right"
            app:destination="@id/fragment_right" />
        <action
            android:id="@+id/action_FirstFragment_to_fragment_settings"
            app:destination="@id/fragment_settings" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.bierbock.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_left"
        android:name="com.bierbock.fragment_left"
        android:label="fragment_left"
        tools:layout="@layout/fragment_left" />
    <fragment
        android:id="@+id/fragment_right"
        android:name="com.bierbock.fragment_right"
        android:label="fragment_right"
        tools:layout="@layout/fragment_right" />
    <fragment
        android:id="@+id/fragment_settings"
        android:name="com.bierbock.fragment_settings"
        android:label="fragment_settings" />
</navigation>