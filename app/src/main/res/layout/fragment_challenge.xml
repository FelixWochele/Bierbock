<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/statistics_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/statistic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic 1: 100"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/statistic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic 2: 50"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Add more TextViews for additional statistics as needed -->

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="50dp"
        android:clipToPadding="false"
        />

</LinearLayout>

